{
  "name": "ajson",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ajson"
  },
  "bugs": {
    "url": "https://github.com/ajson/issues"
  },
  "homepage": "https://github.com/ajson#readme",
  "author": "J. Harshbarger",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all build:dist build:tests",
    "build:tests": "tsc -p tsconfig.tests.json",
    "build:dist": "tsc -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "nyc ava ./tests/*.spec.js",
    "check-coverage": "nyc check-coverage --lines 100 --functions 100 --branches 90",
    "test": "npm-run-all lint build unit check-coverage",
    "watch": "npm run build && concurrently -r --kill-others 'npm run --silent build -- -w' 'sleepms 2000 && ava ./dist/*.spec.js --watch'",
    "cov": "npm-run-all build unit html-coverage && opn coverage/index.html",
    "html-coverage": "nyc report --reporter=html",
    "send-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "changelog": "chg release -y && git add -A CHANGELOG.md",
    "version": "npm-run-all changelog build",
    "np": "npm run build && np",
    "docs": "typedoc ./src/index.ts --out docs --theme minimal"
  },
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "@types/node": "^7.0.31",
    "ava": "^0.19.0",
    "chg": "^0.3.2",
    "codecov": "^2.0.1",
    "concurrently": "^3.5.0",
    "np": "^2.16.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "sleep-ms": "^2.0.1",
    "tslint": "^5.0.0",
    "tslint-config-swimlane": "^3.0.2",
    "typedoc": "^0.9.0",
    "typescript": "^2.2.2"
  },
  "keywords": [],
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "ava": {
    "source": [
      "dist/**/*.spec.js"
    ]
  },
  "dependencies": {
    "tslib": "^1.7.1"
  }
}
